@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model OnlineShop.ViewsModel.SellerViewModel

<h1>Добавить продавца</h1>

<form asp-action="AddSeller" method="post">
    <div class="form-group">
        <label for="Name">Имя продавца</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>

    <div class="form-group">
        <label for="ShopId">ID Магазина</label>
        <input type="number" class="form-control" id="ShopId" name="ShopId" required />
    </div>

    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
